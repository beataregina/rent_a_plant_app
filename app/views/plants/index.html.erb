<section class="section">
    <div class="l-container is--plants-index">
      <h1 class="plants-index__h1">Plants Catalogue</h1>
      <div class="plants-index">
       <% @plants.each do |plant| %>
          <%= link_to plant_path(plant), class: "plants-index__container w-inline-block" do %>
            <div class="plants-index__img-wrp">
              <%= cl_image_tag(plant.photo.key, class: "plants-index__img") %>
            </div>
            <h2 class="plants-index__name"><strong class="bold-text"><%= plant.name %></strong></h2>
            <div class="plants-index__price-div">
              <h3 class="plants-index__price is--currency">â‚¬</h3>
              <h3 class="plants-index__price"><%= plant.price %></h3>
            </div>
          <% end %>
      <%end%>
      </div>
    </div>
  </section>
<h3> <%= link_to "+ Create new plant!", new_plant_path %> </h3>
